<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/bluetoothImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/allButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt" />

    <LinearLayout
        android:id="@+id/allButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bluetoothImageView"
        app:layout_constraintVertical_bias="0.789"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Disconnect"
            android:textSize="24sp"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Connect To BT"
            android:textSize="24sp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/formBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:onClick="createHelpingSystem"
            android:padding="10dp"
            android:text="create Helping System"
            android:textSize="24sp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/sensorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:onClick="goToSensorMenu"
            android:padding="10dp"
            android:text="Sensor menu"
            android:textSize="24sp"
            android:layout_marginTop="25dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>