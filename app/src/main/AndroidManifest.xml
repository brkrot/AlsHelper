<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alshelper">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name=".AppBase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".bluetoothUtils.Terminal"></activity>
        <activity android:name=".sensors.AnalogSensorActivity" />
        <activity android:name=".sensors.OnOffSensorActivity" />
        <activity android:name=".sensors.NewJoystick" />
        <activity android:name=".sensors.sensor1Activity" />
        <activity android:name=".sensors.SensorMenu" />
        <activity android:name=".JoystickSensor" />
        <activity android:name=".LampControl" />
        <activity android:name=".bluetoothUtils.PairedDevicesList" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>