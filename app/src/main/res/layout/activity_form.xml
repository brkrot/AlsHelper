<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".processingData.Form">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/actionsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">


            <TextView
                android:id="@+id/patientNameTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/insert_name"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/patientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_choose_sensor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/choose_sensor"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_sensor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/spinnerChooseSensor"
                android:outlineAmbientShadowColor="@color/colorMatrix"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView_chosenSensor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/joystick" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView_choose_action1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action1"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView_choose_action2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action2"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView_choose_action3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action3"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView_choose_action4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action4"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="send"
                android:text="Send"
                android:textAlignment="center" />
           </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>