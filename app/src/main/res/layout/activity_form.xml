<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".processingData.Form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp">

        <TextView
            android:id="@+id/patientNameTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/insert_name"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/patientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_choose_sensor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/choose_sensor"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_choose_sensor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/spinnerChooseSensor"
            android:textAlignment="center"
            android:textSize="15sp"
            android:outlineAmbientShadowColor="@color/colorMatrix"/>

        <ImageView
            android:id="@+id/imageView_chosenSensor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/joystick" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView_choose_action1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action1"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView_choose_action2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action2"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView_choose_action3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action3"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView_choose_action4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="choose_action4"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_choose_action4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/helpingSystemActions"
                android:textAlignment="center" />

            <Button
                android:id="@+id/button_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="send"
                android:text="Send"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>